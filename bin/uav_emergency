#!/usr/bin/perl
use v5.14;
use strict;
use warnings;

use AnyEvent;
use UAV::Pilot;
use UAV::Pilot::ARDrone::Driver;
use UAV::Pilot::ARDrone::Control;

use constant IP  => '192.168.1.1';
my $ardrone = UAV::Pilot::ARDrone::Driver->new({
    host => IP,
});
$ardrone->connect;
my $ar = UAV::Pilot::ARDrone::Control->new({
    driver => $ardrone,
});
$ar->emergency;
